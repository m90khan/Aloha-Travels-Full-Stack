extends base
    
block content
    .section-tours.u-mt-20
        .tour
            .tour-heading
                img(src='/img/svg/insta-gallery.svg' alt='Instagram Gallery')
                h1.tour-heading__secondary Instagram Gallery
            .tour-packages#tours-section
                    each insta in instaImages.data.collector
                        .package
                            .package-header
                                picture
                                    img.lazyload.package-header__image(src=`${insta.thumbnail_src}`, alt=``)
                                //- .package-header-wishicon
                                //-     a#addtowishlist
                                //-         svg.package-header-wishicon__wishlist.package-header__wishlist--active
                                //-             use(xlink:href='/img/icons/sprite.svg#icon-heart')
                                h6.package-header__price= `${new Date(insta.taken_at_timestamp*1000).toLocaleString('en-us', {month: 'long', year: 'numeric'})}`
                            .package-content
                                - let desc = insta.description.length > 100 ?  `${insta.description.substr(0, 100)}...` : insta.description
                                    p.desc-text.u-mb-2= `${desc}`
                            .package-card
                                .package-card__data
                                        svg.package-card__data-icon
                                            use(xlink:href='/img/icons.svg#icon-heart')
                                        p= insta.likes
                                .package-card__data
                                        svg.package-card__data-icon
                                            use(xlink:href='/img/icons.svg#icon-message-circle')
                                        p= insta.comments
                            .package-cart
                                h6.package-cart-rating= `${insta.owner.username}`
                                a.btn.btn--tertiary(href=`${insta.display_url}` target="_blank") View 